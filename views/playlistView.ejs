<%- include('header') %>
<div class="dashboard">
    <link rel="stylesheet" href="/css/player.css">
    <div class="dashboardHeader">
        <img src="/images/FullLogo.svg" alt="Logo" class="logo">
        <div class="dashboardHeaderRight">
            <h1>Playlist</h1>
        </div>
    </div>
    <div class="mainContainer">
        <div class="contentContainer">
            <div class="playlistContainer">
            <h2><%= playlist.name %></h2>
            <p><%= playlist.description %></p>
            <div class="tracksContainer">
                <% playlist.tracks.forEach(function(track) { %>
                    <div class="trackItem">
                        <div class="trackInfo">
                            <strong><%= track.title %> - By <%= track.artist %></strong><br>
                            <small><%= track.album %> - <%= track.year %></small><br>
                            <%= track.length %> seconds<br>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        </div>
    </div>
</div>
<style>
    .tracksContainer {
        display: flex;
        flex-direction: column;
    }

    .trackItem {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #ccc;
    }

    .trackInfo {
        flex: 1;
    }

    .trackAudio {
        flex-shrink: 0;
        margin-left: 20px;
    }
</style>
<div class="audioPlayerContainer">
    <%- include('audioPlayer') %>
</div>
<%- include('footer') %>
