<%- include('header') %>
<link rel="stylesheet" href="/css/playlist.css">
<div class="dashboard">
    <link rel="stylesheet" href="/css/player.css">
    <div class="dashboardHeader">
        <img src="/images/FullLogo.svg" alt="Logo" class="logo">
        <div class="dashboardHeaderRight">
            <h1>Playlist</h1>
        </div>
    </div>
    <div class="mainContainer">
        <div class="contentContainer">
            <div class="playlistContainer">
                <h2 class="playlistName">
                    <%= playlist.name %>
                </h2>
                <p class="playlistDescription">
                    <%= playlist.description %>
                </p>
                <div class="tracksContainer">
                    <% playlist.tracks.forEach(function(track) { %>
                        <div class="trackItem">
                            <div class="trackInfo">
                                <span class="trackTitleArtist">
                                    <h3><%= track.title %></h3> - <strong><%= track.artist %></strong>
                                </span>
                            </div>
                            <div class="trackMetadata">
                                <small class="trackAlbum">
                                    <%= track.album %>
                                </small>
                                <span class="trackLength">
                                    <%= Math.floor(track.length / 60) %>:<%= ('0' + track.length % 60).slice(-2) %>
                                </span>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
    <div class="audioPlayerContainer">
        <%- include('audioPlayer') %>
    </div>
</div>
<%- include('footer') %>